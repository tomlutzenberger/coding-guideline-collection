/*
 * HTMLHint Rules for Bootstrap coding standard
 *
 * For details see:
 * https://github.com/twbs/bootstrap/blob/v4-dev/docs/.htmlhintrc
 */

{
  "attr-lowercase": true,
  "attr-no-duplication": true,
  "alt-require": true,
  "attr-unsafe-chars": true,
  "attr-value-double-quotes": true,
  "doctype-first": true,
  "doctype-html5": true,
  "id-unique": true,
  "spec-char-escape": true,
  "src-not-empty": true,
  "tag-pair": true,
  "tagname-lowercase": true,
  "title-require": true
}
